{
	"name": "@oskar-dragon/ccf",
	"version": "0.1.0",
	"description": "CLI tool for Claude Code Flow",
	"module": "cli/src/index.ts",
	"type": "module",
	"scripts": {
		"build": "bun build cli/src/index.ts --outdir cli/dist --target bun --format esm",
		"build:macos-arm64": "bun build --compile --minify --target=bun-darwin-arm64 cli/src/index.ts --outfile bin/claude-code-flow-macos-arm64",
		"build:macos-x64": "bun build --compile --minify --target=bun-darwin-x64 cli/src/index.ts --outfile bin/claude-code-flow-macos-x64",
		"build:linux-x64": "bun build --compile --minify --target=bun-linux-x64 cli/src/index.ts --outfile bin/claude-code-flow-linux-x64",
		"build:all": "bun run build:macos-arm64 && bun run build:macos-x64 && bun run build:linux-x64",
		"dev": "bun run cli/src/index.ts",
		"prepublishOnly": "bun run build",
		"typecheck": "bunx tsc --noEmit",
		"test": "bun test",
		"biome:check": "bunx biome check .",
		"biome:format": "bunx biome format --write .",
		"biome:lint": "bunx biome lint .",
		"biome:fix": "bunx biome check --write .",
		"biome:ci": "bunx biome ci .",
		"check:all": "bun run typecheck && bun run biome:ci && bun run test",
		"prepare": "husky"
	},
	"keywords": [
		"claude-code",
		"project-management",
		"cli"
	],
	"author": "Oskar Dragon",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@types/bun": "latest",
		"husky": "^9.1.7"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@stricli/core": "^1.2.0"
	}
}
