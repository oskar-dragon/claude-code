{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uvx ruff check --fix $FILE || true"
          },
          {
            "type": "command",
            "command": "uvx ruff format $FILE || true"
          }
        ]
      }
    ]
  }
}
